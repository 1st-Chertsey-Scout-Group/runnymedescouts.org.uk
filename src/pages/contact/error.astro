---
import Seperator from "@/components/seperator.astro";
import PageLayout from "@/layouts/page.layout.astro";
import { Block, Button } from "basecamp/components";
import { ArrowLeft } from "lucide-react";
---

<PageLayout
    title="Something went wrong | Runnymede District Scouts"
    description="Form submit error"
>
    <Block.Wrapper id="error">
        <Block.Seperator slot="seperator">
            <Seperator loading="eager" />
        </Block.Seperator>
        <Block.Header slot="header" className="text-primary">
            Something went wrong
        </Block.Header>
        <Block.SubHeader slot="subHeader">
            We were unable to recieve your message! Try again, if the problem
            persists try again later.
        </Block.SubHeader>
        <Block.Body size="sm" slot="body">
            <a href="/">
                <Button
                    Icon={ArrowLeft}
                    type="button"
                    text="Back to homepage"
                    iconClassName="order-first"
                />
            </a>
        </Block.Body>
    </Block.Wrapper>
</PageLayout>
