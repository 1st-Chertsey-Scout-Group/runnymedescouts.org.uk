---
import { cn } from "@/lib/utils";

type BodySize = "sm" | "md" | "lg" | "xl";

const sizeStyles: Record<BodySize, string> = {
    sm: "max-w-screen-sm",
    md: "max-w-screen-md",
    lg: "max-w-screen-lg",
    xl: "max-w-screen-xl",
};

interface Props {
    className?: string;
    size?: BodySize;
}

const { className, size = "md" }: Props = Astro.props;
---

<div class={cn("mb-8 lg:mb-16", className)}>
    <div class={cn("mx-auto", sizeStyles[size])}>
        <slot />
    </div>
</div>
